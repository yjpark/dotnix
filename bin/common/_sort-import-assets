#!/usr/bin/env bash

BIN=`dirname $0`
source $BIN/_console_utils.bash

# $1 Source
SOURCE=$1

move() {
  # $1 asset type
  # $2 filename

  if [ -f $2 ] ; then
    d=$(date -r "$2" +%Y-%m-%d)
    mkdir -p "$d/$1/$SOURCE"
    mv -v -- "$2" "$d/$1/$SOURCE/"
  fi
}

for x in *.JPG; do
  move Photo $x
done

for x in *.jpg; do
  move Photo $x
done

for x in *.heic; do
  move Photo $x
done

for x in *.MOV; do
  move Video $x
done

for x in *.mov; do
  move Video $x
done

for x in *.MP4; do
  move Video $x
done

for x in *.mp4; do
  move Video $x
done

for x in *.wav; do
  move Audio $x
done

for x in *.mp3; do
  move Audio $x
done


