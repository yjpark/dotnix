#!/usr/bin/env bash

cd `dirname $0`
source _console_utils.bash

cd ../..

HOST=`hostname`

if [[ $HOST = "mbp" ]] ; then
    if [[ $USER = "yjpark" ]] ; then
        confirm "Rebuild Nix Home: ${GREEN}${USER}@${HOST}${NO_COLOR}"
        if [ "$#" -eq 0 ] ; then
            echo home-manager --extra-experimental-features "nix-command flakes" --flake .#${USER}@${HOST} switch
        else
            echo home-manager --extra-experimental-features "nix-command flakes" --flake .#${USER}@${HOST} $@
        fi
    else
        echo "Unsupported USER: ${RED}${USER}${NO_COLOR}"
        exit 3
    fi
else
    echo "Unsupported HOST: ${RED}${HOST}${NO_COLOR}"
    exit 2
fi
